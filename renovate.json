{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "Cargo (minor/patch)",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "Cargo (major)",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": [
          "major"
      ]
    },
    {
      "groupName": "Docker",
      "matchManagers": ["dockerfile"]
    },
    {
      "groupName": "github",
      "matchManagers": ["github-actions"]
    },
    {
      "groupName": "Npm",
      "matchManagers": ["npm"],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "Npm",
      "matchManagers": ["npm"],
      "matchUpdateTypes": [
          "major"
      ]
    },
    {
      "groupName": "python",
      "matchManagers": ["pip_requirements"]
    }
  ],
  "osvVulnerabilityAlerts": true
}
